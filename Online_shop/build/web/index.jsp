                <ol class="carousel-indicators">
                    <c:forEach begin="0" end="${Events.size()-1}" var="count"> 

                        <c:if test="${count!=0}">
                            <li data-target="#header-carousel" data-slide-to="${count}" ></li>
                            </c:if>
                            <c:if test="${count==0}">
